# OpenAI Configuration
# Required: Your OpenAI API key (get it from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Custom OpenAI base URL (leave empty for default)
# OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: Request timeout in milliseconds (default: 60000)
# OPENAI_TIMEOUT=60000

# GPT-5 Model Configuration
# Default model to use (options: gpt-5, gpt-5-mini, gpt-5-nano)
GPT5_DEFAULT_MODEL=gpt-5

# Server Configuration
# Optional: Custom server name
# SERVER_NAME=gpt5-claude-mcp

# Optional: Maximum retry attempts for failed requests (default: 3)
# MAX_RETRIES=3

# Optional: Delay between retries in milliseconds (default: 1000)
# RETRY_DELAY=1000

# Logging Configuration
# Log level (options: debug, info, warn, error)
LOG_LEVEL=info

# Enable request logging (true/false)
LOG_REQUESTS=false

# Enable response logging (true/false)
LOG_RESPONSES=false

# Development Configuration
# Uncomment these for debugging and development
# LOG_LEVEL=debug
# LOG_REQUESTS=true
# LOG_RESPONSES=true